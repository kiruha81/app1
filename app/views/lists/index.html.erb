<h2><%= link_to "新規投稿", new_list_path %></h2>

<% if @list.errors.any? %>
  <%= @list.errors.count %>errors
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <h4>image</h4>
  <%= f.file_field :image, accept: "image/*" %><br><br>
  <%= f.submit "保存" %><br>
<% end %>
<br>
<br>
<h1>投稿一覧</h1>

<% @lists.each do |list| %>

  <p>title</p>
  <span><%= link_to list.title, list_path(list.id) %></span>

  <p>body</p>
  <span><%= list.body %></span>

  <p>image</p>
  <% if list.image.attached? %>
    <%= image_tag list.image, size: "200x200" %>
  <% else %>
    <%= image_tag "def_icon", size: "200x200" %>
  <% end %>
<% end %>

